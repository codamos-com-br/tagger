{
    "name": "codamos/tagger",
    "description": "A go-like tag parser for PHP classes",
    "type": "library",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.80",
        "phpstan/phpstan": "^2.1"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Codamos\\Tagger\\": "src/"
        }
    },
    "authors": [
        {
            "name": "nawarian",
            "email": "nickolas@phpsp.org.br"
        }
    ],
    "scripts": {
        "format:fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "phpstan": "phpstan analyse --memory-limit=1G --configuration=phpstan.neon",
        "tests": "phpunit --configuration phpunit.xml",
        "checks": [
            "@format:fix",
            "@tests",
            "@phpstan"
        ]
    }
}
